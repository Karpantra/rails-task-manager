<%= link_to "Create a new task", tasks_new_path %>
<% @tasks.each do |task| %>
<h2><%= task.name %></h2>
<p><%= task.detail %></p>
<p><%= task.completed %></p>
<%= link_to "Look at the task", task_path(task) %>
<%= link_to "Update task", edit_path(task) %>
<%= link_to "Delete task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
